<div class="row">
  <h1><%=@attraction.name%></h1>

  <%= link_to_if current_user.admin, "Edit Attraction", edit_attraction_path(@attraction),class: "btn btn-default btn-primary" %>

  <% if !current_user.admin %>
    <%= form_for @ride do |f| %>
      <%= f.hidden_field :attraction_id, value: @attraction.id %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.submit "Go on this ride", class: "btn btn-default btn-primary" %>
    <% end %>
  <%end%>


</div>